<?xml version="1.0" encoding="utf-8" ?>
    <configuration>
        <system.webServer>
            <rewrite>
                <rules>
                    <rule name="allToIndex">
                    <match url="^((?!css).)*$"/>
                    <action type="Rewrite" url="index.php" appendQueryString="true"/>
                    <conditions logicalGrouping="MatchAll">
                    <add input="{REQUEST_URI}" pattern="\.png|\.css|\.jpg" negate="true" />
                    </conditions>
                    </rule>

                    /*DELETE BEFORE DEPLOYMENT - NEED TO IGNORE SCRIPTS FOLDER FOR TESTING*/
                    <rule name="ignore scripts folder" stopProcessing="true">
                            <match url="^scripts/" />
                            <action type="None" />
                        </rule>


                </rules>
            </rewrite>
        </system.webServer>
    </configuration>